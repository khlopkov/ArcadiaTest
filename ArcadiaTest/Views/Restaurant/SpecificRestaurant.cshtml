@using ArcadiaTest.BusinessLayer.DTO
@{
    ViewData["Title"] = "Restaurant " + ViewBag.Restaurant.Title;
}
<!DOCTYPE html>

<div class="text-center">
    <h3 class="display-4">Restaurant @ViewBag.Restaurant.Title</h3>
</div>
        
<div class="management-panel box-shadow">
    <a class="button" asp-controller="Restaurant" asp-action="Timetable" asp-route-restaurantId="@ViewBag.Restaurant.Id">Timetable</a>
    <a class="button" asp-controller="Restaurant" asp-action="AddCook" asp-route-restaurantId="@ViewBag.Restaurant.Id">+Add cook</a>
</div>
<table class="information_table">
    <thead>
    <tr>
        <td>
            <p>Link</p></td>
        <td>
            <p>Name</p></td>
    </tr>
    </thead>
    @foreach (CookDTO w in ViewBag.Workers)
    {
        <tr>
            <td>
                <a asp-controller="Cook" asp-action="SpecificCook" asp-route-id="@w.Id">
                    View cook's profile
                </a></td>
            <td>
                <p>@w.LastName @w.Name @w?.SecondName</p></td>
        </tr>
    }
</table>

